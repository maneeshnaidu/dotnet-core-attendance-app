@model List<Employee>
@{
    ViewData["Title"] = "Index";
}

<h3 class="display-4">Employees</h3>
    <div class="row">
        <a class="btn btn-primary" style="width:auto"
               asp-area="" asp-controller="Employee" asp-action="Create">
                Add new employee
            </a>
    </div>

@if (Model.Any())
{
    <table class="table table-striped table-bordered" style="width:100%" id="usersTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>            
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
<tr>
    <td>@user.Id</td>
    <td>@user.FirstName</td>
    <td>@user.LastName</td>
</tr>
            }
        </tbody>
    </table> 
    
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet.
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user.
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-area="" asp-controller="Employee" asp-action="Create">
                Add new employee
            </a>
        </div>
    </div>
}

@section Scripts{ 
    <script>


    $(document).ready(function () {
        $('#usersTable').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv',  'print'
            ]
        });
    });

    </script>
}
